<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="427dp"
        android:layout_height="396dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="9dp">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="116dp">


        <Button
            android:id="@+id/Button_History"
            android:layout_width="138dp"
            android:layout_height="59dp"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:text="Button_History"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_fragment2"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:visibility="invisible"
            android:text="Button_2_History"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_recycl_view"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:visibility="invisible"
            android:text="Button for RW go to A2"
            app:layout_constraintEnd_toStartOf="@+id/button_fragment2"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMainActvity"
            android:layout_width="match_parent"
            android:layout_height="474dp"

            tools:listitem="@layout/program_item_recycler_view_card_view" />

        <Button
            android:id="@+id/button_detail_fragment"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Detail fragment"
            app:layout_constraintStart_toEndOf="@+id/Button_History"
            app:layout_constraintTop_toBottomOf="@+id/button_fragment2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>