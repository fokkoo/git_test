<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".model.trainRecyclerView.TrainFragment"

    >




    <LinearLayout
        android:id="@+id/TrainMenuLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="116dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="Программы тренировок" />
        <TextView
            android:id="@+id/train_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="Программы тренировок" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProgramTrainRecycleView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:listitem="@layout/train_list_item"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            />

        <Button
            android:id="@+id/add_program"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Добавить тренеровку" />
        <TextView
            android:id="@+id/train_Toast_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="Добавить тренеровку нажато?" />

    </LinearLayout>


</FrameLayout>