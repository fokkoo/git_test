<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/RepetitionWorkoutItemRepetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepetitionWorkoutItemSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="130.5"
        android:textColor="@color/black"
        android:textSize="30dp"

        app:layout_constraintEnd_toStartOf="@+id/RepetitionWorkoutItemDevider"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepetitionWorkoutItemDevider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="30dp"

        app:layout_constraintEnd_toStartOf="@+id/RepetitionWorkoutItemRepetition"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepetitionWorkoutItemListMainID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1      "
        android:textColor="@color/black"
        android:textSize="30dp"


        app:layout_constraintBottom_toBottomOf="@+id/RepetitionWorkoutItemSet"
        app:layout_constraintEnd_toStartOf="@+id/RepetitionWorkoutItemSet" />
</androidx.constraintlayout.widget.ConstraintLayout>