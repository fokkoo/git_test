<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.repetitionWorkout.RepetitionWorkoutFragment">

    <FrameLayout
        android:id="@+id/fragment_result_repetition_container"
        android:layout_width="394dp"
        android:layout_height="496dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="38dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewRepetitionWorkout"
            android:layout_width="378dp"
            android:layout_height="204dp"
            tools:listitem="@layout/repetition_workout_item_list" />


    </FrameLayout>

    <ImageView
        android:id="@+id/RepetitionWA_Image"
        android:layout_width="105dp"
        android:layout_height="101dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RepetitionMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:text="11 Название упражнения "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepetitionHardText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Результаты прошлых тренеровок"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Результаты текущей тренеровки"
        app:layout_constraintEnd_toEndOf="@+id/RepetitionMainText"
        app:layout_constraintTop_toBottomOf="@+id/RepetitionMainText" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name Write This"
        app:layout_constraintStart_toStartOf="@+id/RepetitionMainText"
        app:layout_constraintTop_toBottomOf="@+id/RepetitionMainText" />

    <Button
        android:id="@+id/buttonAddRepTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить подход"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

</androidx.constraintlayout.widget.ConstraintLayout>